<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_checkout_bg">

    <ImageView
        android:id="@+id/iv_hotel_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="53dp"
        android:src="@drawable/img_hotel_bg"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_hotel_bg"
        android:layout_alignTop="@id/iv_hotel_bg"
        android:layout_marginLeft="78dp"
        android:layout_toRightOf="@id/iv_hotel_bg">

        <TextView
            android:id="@+id/tv_hotel_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="希尔顿酒店及度假村"
            android:textColor="@color/text_white"
            android:textSize="39dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_hotel_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_hotel_name"
            android:layout_marginTop="13dp"
            android:text="豪华大床房（含双早）"
            android:textColor="@color/text_white"
            android:textSize="25dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_hotel_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_hotel_title"
            android:layout_marginTop="13dp"
            android:text="房号 1608"
            android:textColor="@color/text_white"
            android:textSize="20dp"
            android:textStyle="bold"/>

        <LinearLayout
            android:id="@+id/ll_welcome_time_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_hotel_number"
            android:layout_marginTop="37dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="入住时间"
                android:textColor="@color/text_white"
                android:textSize="20dp"/>
            <TextView
                android:id="@+id/tv_welcome_time_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:text="2018年12月1日"
                android:textColor="@color/text_white"
                android:textSize="20dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_welcome_time_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_welcome_time_start"
            android:layout_marginTop="7dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="离店时间"
                android:textColor="@color/text_white"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/tv_welcome_time_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:text="2018年12月3日"
                android:textColor="@color/text_white"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/tv_welcome_time_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:text="共2晚"
                android:textColor="@color/text_blue1"
                android:textSize="20dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_welcome_time_end"
            android:layout_marginTop="44dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="房费"
                android:textColor="@color/text_white"
                android:textSize="22dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:text="¥"
                android:textColor="@color/text_orange"
                android:textSize="28dp"/>

            <TextView
                android:id="@+id/tv_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1800"
                android:textColor="@color/text_orange"
                android:textSize="50dp"/>
        </LinearLayout>

        <Button
            android:layout_width="124dp"
            android:text="确定"
            android:layout_height="47dp"/>
    </RelativeLayout>

</RelativeLayout>